<!DOCTYPE html>
<html lang="ro-RO">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Proiect BD: Companie furnizare energie electrica</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProiectBD.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Proiect BD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Privire generala</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-page="/Clienti/Index">Clienti</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Reclamatii/Index">Reclamatii</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/LocuriDeConsum/Index">Locuri de consum</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Indecsi/Index">Indecsi</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Contracte/Index">Contracte</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Facturi/Index">Facturi</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/Incasari/Index">Incasari</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Statistici</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="" asp-page="/ClientiCuContractCareExpiraCurand/Index">Clienti al caror contract urmeaza sa expire</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/ClientiTopConsumMic/Index">Clienti al caror consum este sub 500 kWh</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/ClientiTopIncasare/Index">Incasarile pe client</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-page="/VizualizareReclamatii/Index">Vizualizare reclamatii</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Florin-Alexandru Dima - Grupa 262 - FMI Unibuc
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>