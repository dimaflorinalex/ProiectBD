@page "/Facturi/{id:int}/Modifica"
@using ProiectBD.Enums;
@using ProiectBD.Pages.Facturi;
@model ModificaModel
@{
    ViewData["Title"] = "Modifica detalii contract";
    ViewData["Description"] = $"ID Factura: {(Model.Factura is null ? "Necunoscut" : $"{Model.Factura.Id} (ID Contract: {Model.Factura.IdContract})")}";
}

<div class="text-center">
    <h1 class="display-4 text-uppercase">@ViewData["Title"]</h1>
    <h2>@ViewData["Description"]</h2>

    @if (Model.Factura is not null)
    {
        <form class="mt-5 d-flex flex-column gap-2" method="POST">
            <div class="form-group row">
                <label for="inputId" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputId" placeholder="ID" name="Id" value="@Model.Factura.Id" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputIdContract" class="col-sm-2 col-form-label">ID Contract</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputIdContract" placeholder="ID Contract" name="IdContract" value="@Model.Factura.IdContract">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputDataEmitere" class="col-sm-2 col-form-label">Data emitere</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputDataEmitere" placeholder="Data emitere" name="DataEmitere" value="@Model.Factura.DataEmitere.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputDataScadenta" class="col-sm-2 col-form-label">Data scadenta</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputDataScadenta" placeholder="Data scadenta" name="DataScadenta" value="@Model.Factura.DataScadenta.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputValoare" class="col-sm-2 col-form-label">Valoare</label>
                <div class="col-sm-10">
                    <input type="number" step="0.01" class="form-control" id="inputValoare" placeholder="Valoare" name="Valoare" value="@Model.Factura.Valoare">
                </div>
            </div>
            <div class="d-flex justify-content-center gap-4">
                <button type="submit" class="btn btn-success">Salveaza modificarile</button>
            </div>
        </form>
    }
</div>
