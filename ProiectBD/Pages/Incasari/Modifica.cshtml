@page "/Incasari/{id:int}/Modifica"
@using ProiectBD.Enums;
@using ProiectBD.Pages.Incasari;
@model ModificaModel
@{
    ViewData["Title"] = "Modifica detalii incasare";
    ViewData["Description"] = $"ID Incasare: {(Model.Incasare is null ? "Necunoscut" : $"{Model.Incasare.Id} (ID Factura: {Model.Incasare.IdFactura})")}";
}

<div class="text-center">
    <h1 class="display-4 text-uppercase">@ViewData["Title"]</h1>
    <h2>@ViewData["Description"]</h2>

    @if (Model.Incasare is not null)
    {
        <form class="mt-5 d-flex flex-column gap-2" method="POST">
            <div class="form-group row">
                <label for="inputId" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputId" placeholder="ID" name="Id" value="@Model.Incasare.Id" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputIdFactura" class="col-sm-2 col-form-label">ID Factura</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputIdFactura" placeholder="ID Factura" name="IdFactura" value="@Model.Incasare.IdFactura">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputData" class="col-sm-2 col-form-label">Data</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputData" placeholder="Data" name="Data" value="@Model.Incasare.Data.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputValoare" class="col-sm-2 col-form-label">Valoare</label>
                <div class="col-sm-10">
                    <input type="number" step="0.01" class="form-control" id="inputValoare" placeholder="Valoare" name="Valoare" value="@Model.Incasare.Valoare">
                </div>
            </div>
            <div class="d-flex justify-content-center gap-4">
                <button type="submit" class="btn btn-success">Salveaza modificarile</button>
            </div>
        </form>
    }
</div>
