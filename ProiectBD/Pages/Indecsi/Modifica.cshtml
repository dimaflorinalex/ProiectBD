@page "/Indecsi/{id:int}/Modifica"
@using ProiectBD.Enums;
@using ProiectBD.Pages.Indecsi;
@model ModificaModel
@{
    ViewData["Title"] = "Modifica detalii index";
    ViewData["Description"] = $"ID Index: {(Model.Index is null ? "Necunoscut" : $"{Model.Index.Id} (ID Loc de Consum: {Model.Index.IdLocDeConsum})")}";
}

<div class="text-center">
    <h1 class="display-4 text-uppercase">@ViewData["Title"]</h1>
    <h2>@ViewData["Description"]</h2>

    @if (Model.Index is not null)
    {
        <form class="mt-5 d-flex flex-column gap-2" method="POST">
            <div class="form-group row">
                <label for="inputId" class="col-sm-2 col-form-label">ID</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputId" placeholder="ID" name="Id" value="@Model.Index.Id" disabled>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputIdLocDeConsum" class="col-sm-2 col-form-label">ID Loc de Consum</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputIdLocDeConsum" placeholder="ID Loc de Consum" name="IdLocDeConsum" value="@Model.Index.IdLocDeConsum">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputTipIndex" class="col-sm-2 col-form-label">Tip index</label>
                <div class="col-sm-auto align-self-center">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="TipIndex" id="inputTipIndexA" value="@TipIndex.AUTOCITIRE" checked="@(Model.Index.TipIndex == @TipIndex.AUTOCITIRE ? "checked" : null)">
                        <label class="form-check-label" for="inputTipIndexA">Autocitire</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="TipIndex" id="inputTipIndexE" value="@TipIndex.ESTIMARE" checked="@(Model.Index.TipIndex == @TipIndex.ESTIMARE ? " checked" : null)">
                        <label class="form-check-label" for="inputTipIndexE">Estimare</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="TipIndex" id="inputTipIndexC" value="@TipIndex.CITIRE" checked="@(Model.Index.TipIndex == @TipIndex.CITIRE ? " checked" : null)">
                        <label class="form-check-label" for="inputTipIndexC">Citire</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputData" class="col-sm-2 col-form-label">Data</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="inputData" placeholder="Data" name="Data" value="@Model.Index.Data.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputValoare" class="col-sm-2 col-form-label">Valoare</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="inputValoare" placeholder="Valoare" name="Valoare" value="@Model.Index.Valoare">
                </div>
            </div>
            <div class="d-flex justify-content-center gap-4">
                <button type="submit" class="btn btn-success">Salveaza modificarile</button>
            </div>
        </form>
    }
</div>
